@model IEnumerable<PennyTechManagementSystem.Models.NavbarItem>

<div class="sidebar">
    <nav class="sidebar-nav">
        <ul class="nav">
            <li class="nav-title">
                Theme
            </li>
            @foreach (var item in Model)
            {
            <li class="nav-item">
                <a href="@Url.Action(item.ActionName, item.ControllerName, new { id = item.MenuID })" class="nav-link">
                    <i class="@item.Icon"></i> @item.LinkText
                </a>
            </li>
            }
            <li class="nav-title">
                Management
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fa fa-gear"></i> Manage Items
                </a>
            </li>
            
        </ul>
    </nav>
</div>