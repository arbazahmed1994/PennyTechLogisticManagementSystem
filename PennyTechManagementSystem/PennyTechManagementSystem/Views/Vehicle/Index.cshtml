@model IEnumerable<PennyTechManagementSystem.Models.VehicleModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NestedLayout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table-custom-3 table table-bordered table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleTypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleBusinessTypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleCompanyID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleLenght)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChasisNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusID)
            </th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                    @Html.HiddenFor(modelItem => item.VehicleCode)
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleBusinessTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleCompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleLenght)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChasisNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EngineNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusName)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Vehicle", new { id=item.VehicleCode })"><i class="fa fa-pencil"></i></a>
                </td>
                <td>
                    <a href="@Url.Action("Detail", "Vehicle", new { id=item.VehicleCode })"><i class="fa fa-document"></i></a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", "Vehicle", new { id=item.VehicleCode })" onclick="return confirm('Do you really want to delete this item?')"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
