@model PennyTechManagementSystem.Models.TripEndModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_NestedLayout.cshtml";
}


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

<div class="tt">
 <table>
     <tr>
         <td>Driver Name : </td>
         <td>@Html.DisplayFor(model => model.TripBeginList[0].DriverName)</td>
     </tr>
     <tr>
         <td>Vehicle Number : </td>
         <td>@Html.DisplayFor(model => model.TripBeginList[0].VehicleNumber)</td>
     </tr>
     <tr>
         <td>Order Company Name : </td>
         <td>@Html.DisplayFor(model => model.TripBeginList[0].OrderCompanyName)</td>
     </tr>
     <tr>
         <td>Source Location : </td>
         <td>@Html.DisplayFor(model => model.TripBeginList[0].SourceLocation)</td>
     </tr>
     <tr>
         <td>Destination Location : </td>
         <td>@Html.DisplayFor(model => model.TripBeginList[0].DestinationLocation)</td>
     </tr>
     <tr>
         <td>Builty Number : </td>
         <td>@Html.DisplayFor(model => model.TripBeginList[0].BuiltyNumber)</td>
     </tr>
     <tr>
         <td>Reference Date : </td>
         <td>@Html.DisplayFor(model => model.TripBeginList[0].ReferenceDate)</td>
     </tr>
 </table>
</div>

 <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <strong>@ViewBag.Form</strong>
                    <small>Form</small>
                </div>
                <div class="card-body">
                    <div class="row">
                    
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.EndDate)
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.EndDate,"{0:d}")
                                    @Html.ValidationMessageFor(model => model.EndDate)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-9">
                                        
                            <table class="table table-bordered table-sm">
                            <thead style="background:whitesmoke">
                                <tr>
                                    <th>Expence Name</th>
                                    <th>Amount</th>
                                    <th>Comments</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < Model.TripExpenceList.Count(); i++)
                                {
                                    @Html.HiddenFor(model => model.TripExpenceList[i].ExpenceNameID)
                                    @Html.HiddenFor(model => model.TripExpenceList[i].ExpenceName)
                                    @Html.HiddenFor(model => model.TripExpenceList[i].Amount)
                                    @Html.HiddenFor(model => model.TripExpenceList[i].Comments)
                            
                                    <tr>
                                        @Html.HiddenFor(model => model.TripExpenceList[i].ExpenceNameID)
                                        <td>
                                            @Html.DisplayFor(model => model.TripExpenceList[i].ExpenceName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.TripExpenceList[i].Amount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.TripExpenceList[i].Comments)
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td>
                                        @Html.TextBox("ExpenceNameValue", null, new { id = "searchTxt" })
                                    </td>
                                    <td>
                                        @Html.TextBox("AmountValue", null)
                                    </td>
                                    <td>
                                        @Html.TextBox("CommentsValue", null)
                                        @*@Html.ActionLink("Add Row", "AddRow")*@
                                        @*<button class="btn-upgrade" type ="submit" value ="Upgrade" onclick="addExpence(@Model)">
                                            <i class="fa fa-upload"></i>
                                        </button>*@
                                        <input type="submit" class="btn btn-sm btn-primary" value="Add Row"  name="action:AddRow" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                               
                    </div>
                        <div class="col-sm-3">
                            <div class="card">
                                <div class="card-header">
                                    Fuel Expence
                                </div>
                                <div class="card-body">
                                    <div class="row">
                    
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="editor-label">
                                                    @Html.LabelFor(model => model.FuelLitre)
                                                </div>
                                                <div class="editor-field">
                                                    @Html.EditorFor(model => model.FuelLitre)
                                                    @Html.ValidationMessageFor(model => model.FuelLitre)
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="editor-label">
                                                    @Html.LabelFor(model => model.FuelRate)
                                                </div>
                                                <div class="editor-field">
                                                    @Html.EditorFor(model => model.FuelRate)
                                                    @Html.ValidationMessageFor(model => model.FuelRate)
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="editor-label">
                                                    @Html.LabelFor(model => model.FuelAmount)
                                                </div>
                                                <div class="editor-field">
                                                    @Html.EditorFor(model => model.FuelAmount)
                                                    @Html.ValidationMessageFor(model => model.FuelAmount)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p>
                            <input type="submit" class="btn btn-sm btn-primary" value="Create"  name="action:Create" />
                        </p>
                    </div>
    
                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
   
            </div>                        
        </div>
    </div>
</div>
          

    
}



    
<script>

    var urlService = 'http://localhost:61299/TripEnd/Search/';
    $(function () {
        $('#searchTxt').autocomplete({
            source: urlService
        });
    })

    function addExpence(model) {

        var Data = {};
        Data.AmountValue = $('#AmountValue').val();
        Data.CommentsValue = $('#CommentsValue').val();
        Data.ExpenceNameValue = $('#searchTxt').val();
        Data.oldModel = model;
        $.ajax({
          
            url: document.location.origin + "/TripEnd/AddRow/",
            dataType: 'json',
            type: 'POST',

            data: Data,

            success: function (data) {
                console.log(data)
                if (data.IsSuccess) {
            
                    // Clear the input tags
                    console.log(data)
           
                    formContainer.find("input[type='text']").each(function (i, element) {
                 
                        $(this).val('');
                  
                    });
             
                }
        
                alert(data.Message);
           
            },

            error: function (jqXHR, textStatus, errorThrown) {
         
                alert(errorThrown);
       
            }
        })
    }
</script> 